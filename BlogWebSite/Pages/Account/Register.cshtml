@page
@using BlogWebSite.Models
@model BlogWebSite.Pages.Account.RegisterModel
@{
}


<div class="row">
    <form method="post" class="form-horizontal">
        @if (!ModelState.IsValid)
        {
            <div class="col-md-offset-2 col-md-10">
                <h3 class="text-danger">Validation Errors</h3>
                <div asp-validation-summary="All"></div>
                <hr />
            </div>
        }
        <div class="form-group">
            <label asp-for="user.Email" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="user.Email" class="form-control" placeholder="Email" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.UserName" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="user.UserName" class="form-control" placeholder="User Name" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.PasswordHash" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="user.PasswordHash" class="form-control" placeholder="Password" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="/Account/Login" class="btn btn btn-warning">Cancel</a>                
            </div>
        </div>
    </form>
</div>
