@page "{handler?}"
@using BlogWebSite.Models
@model BlogWebSite.Pages.Account.loginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <form method="post" class="form-horizontal">
        @if (!ModelState.IsValid)
        {
            <div class="col-md-offset-2 col-md-10">
                <h3 class="text-danger">Validation Errors</h3>
                <div asp-validation-summary="All"></div>
                <hr />
            </div>
        }
        <div class="form-group">
            <label asp-for="UserName" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" placeholder="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Login</button> &nbsp;&nbsp;&nbsp;
                <a href="/Account/Register" class="btn btn btn-warning">Register User</a>
            </div>
        </div>
    </form>    
</div>
